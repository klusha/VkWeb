@model VkWeb.Models.UserDataModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>        
        <p>Авторизация </p>

        @using (Html.BeginForm("Index", "UserData"))
        {
    
                <p>
                    @Html.Label("Введите URL пользователя  ")
                    @Html.TextBoxFor(x => x.URL)  
                </p>
            
                <div class="editor-label">
                    @Html.LabelFor(model => model.date)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.date)
                    @Html.ValidationMessageFor(model => model.date)
                </div>

                <p>
                    @Html.Label("Введите размер топа  ")
                    @Html.TextBoxFor(model => model.quantity, new { type="number", min="1", max="50" })
                </p> 
            
           <input type="submit" value="Провести тест" /> 
            



            if (!string.IsNullOrWhiteSpace(ViewBag.URL))
            {
                <p>URL = @ViewBag.URL</p>
                if (@ViewBag.URL != " ")
                {
                    @Html.RouteLink("Просмотреть топ", new { controller = "Top", action = "Index", date = @ViewBag.date, quantity = @ViewBag.quantity });
                    //@Html.ActionLink("Просмотреть топ", "Index", "Top");
                }
                else
                {
                    @Html.Label("Что-то пошло не так")
                }
            }   
         }
    </div>     
        
</body>
</html>
